<link rel="stylesheet" href="style/styles.css">
{{#.}}
<div>
    <div>
        <form action="{{root}}/blocks/dode/submit.php" method="POST">
            <input type="hidden" name="instanceid" value="{{instanceid}}">
            <input type="hidden" name="courseid" value="{{courseid}}">
            <input type="hidden" name="userid" value="{{userid}}">
            <div class="col-md-5">
                <h3></h3>
                <h3 id="userName"> <b>Usuario:</b> {{user.firstname}} {{user.lastname}}</h3>

            </div>
            <div class="grid-container">
                <div class="col-md-12 mt-3 text-center">
                    <h4 class="mt-3 ">Asignaturas: </h4>
                    {{#subjects}}

                    <input type="checkbox" id="{{.}}" name="{{.}}" value="{{.}}">
                    <label for="{{.}}"> {{.}}</label><br>


                    {{/subjects}}

                </div>
                <div class="col-md-5 mt-3 text-center">
                    <h4 class="mt-3 ">Asignaturas actuales del usuario: </h4>
                    {{#user_subjects}}

                    <input type="checkbox" id="{{.}}" name="{{.}}" value="{{.}}" checked>
                    <label for="{{.}}"> {{.}}</label><br>


                    {{/user_subjects}}

                </div>
            </div>

            <div class="col-md-9 text-xs-center text-center mt-6">
                <input type="submit" class="btn btn-primary" name="submitbutton" id="update_dode_subjects"
                    value="Actualizar">
            </div>
        </form>
    </div>
</div>



{{/.}}